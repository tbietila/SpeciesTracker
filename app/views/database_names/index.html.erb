<p id="notice"><%= notice %></p>

<h1>Listing Database Names</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @database_names.each do |database_name| %>
      <tr>
        <td><%= database_name.name %></td>
        <td><%= link_to 'Show', database_name %></td>
        <td><%= link_to 'Edit', edit_database_name_path(database_name) %></td>
        <td><%= link_to 'Destroy', database_name, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

